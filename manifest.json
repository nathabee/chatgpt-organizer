{
  "manifest_version": 3,
  "name": "ChatGPT Organizer",
  "version": "0.1.6",
  "description": "Client-side tool to organize and delete your own ChatGPT conversations.",
  "author": "Nathabee",
  "homepage_url": "https://nathabee.github.io/chatgpt-organizer/",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "action": {
    "default_title": "ChatGPT Organizer"
  }
}
